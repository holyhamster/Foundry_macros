                    }
                }
            }
        case "engulf":
            return {
                name: "Engulf", type: "adept_power",
                data: {
                    description: { source: "CRB396" },
                    action: {
                        type: "complex", skill: "unarmed_combat", attribute: "agility",
                        opposed: { type: "defense" },
